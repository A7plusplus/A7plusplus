{
	"manifest_version": 2,

	"name": "A7++",
	"description": "Life-changing tools for translators and proofreaders in Addic7ed's \"view & edit\" mode",
	"version": "1.3.0",
    "developer": {
    	"name": "Acc\u00eant, HitOrRun, Retrojex & Mmoi"
    },

    "icons": {
    	"16": "icon16.png",
        "48": "icon48.png",
    	"64": "icon64.png",
    	"128": "icon128.png"
    },

    "web_accessible_resources": [
    	"data/Addic7ed.js"
    ],

    "content_scripts": [
        {
            "matches": ["http://www.addic7ed.com/list.php*"],
            "css": ["data/Addic7ed.css"],
            "js": ["data/launcher.js"],
            "run_at": "document_start"
        }
    ]
}
